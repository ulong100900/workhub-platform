{
  "name": "workfinder-server",
  "version": "1.0.0",
  "description": "Backend API для фриланс-биржи WorkFinder",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "cp -r src/views dist/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "validate": "npm run typecheck && npm run lint",
    "prepare": "husky install || true",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop workfinder-api",
    "pm2:restart": "pm2 restart workfinder-api",
    "pm2:logs": "pm2 logs workfinder-api",
    "docker:build": "docker build -t workfinder-api .",
    "docker:run": "docker run -p 5000:5000 --env-file .env workfinder-api"
  },
  "dependencies": {
    "@a2seven/yoo-checkout": "^1.1.4",
    "@supabase/supabase-js": "^2.91.1",
    "argon2": "^0.31.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "response-time": "^2.3.4",
    "socket.io": "^4.6.0",
    "stripe": "^14.10.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "freelance",
    "api",
    "backend",
    "typescript",
    "supabase",
    "express"
  ],
  "author": "WorkFinder Team",
  "license": "ISC"
}
